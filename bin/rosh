#!/usr/bin/env ruby



arg = ARGV.pop

if arg == '--irb'
  require 'irb'
  require_relative '../lib/rosh'
  IRB.setup '../lib/rosh'

  eval Rosh.config if Rosh.config

  IRB.start
else
  require_relative '../lib/rosh/cli'

  if ARGV.include? '--log'
    Rosh::CLI.log = true
    Rosh::Host::Shells::Local.log = true
    Rosh::Host::Shells::Local.log = true
  else
    Rosh::CLI.log = false
    Rosh::Host::Shells::Local.log = false
    Rosh::Host::Shells::Local.log = false
  end

  Rosh::CLI.run
end




